@model List<SchoolManagementSystem.Models.AllStudenResponsetView>

@{
    ViewData["Title"] = "All Students";
    var msg = TempData["msg"];
}
<style>
    body {
        background: url('/path-to-your-background-image.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .container {
        max-width: fit-content;
        margin: auto;
    }
    .page-header {
        font-size: 2.5rem;
        font-weight: 700;
        text-align: center;
        color: #333;
        text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        transition: all 0.3s ease-in-out;
    }

        .page-header:hover {
            color: #0056b3; /* Hover text color */
            text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.3);
            transform: translateY(-5px); /* Slight lift effect */
        }
    .top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .search-bar {
        border-radius: 20px;
        padding: 10px 15px;
        width: 250px;
        border: 1px solid #ccc;
        outline: none;
    }

    .add-btn {
        background-color: #007bff;
        color: white;
        padding: 10px 15px;
        border-radius: 20px;
        text-decoration: none;
        font-weight: bold;
    }

        .add-btn:hover {
            background-color: #0056b3;
        }

    .table-container {
        background: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 10px;
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
    }

        .custom-table thead {
            background: black;
            color: white;
        }

        .custom-table th,
        .custom-table td {
            padding: 12px;
            border: 1px solid #dee2e6;
            text-align: center;
        }

    .btn-update {
        background-color: #ffc107;
        border: none;
        padding: 5px 10px;
        color: white;
        font-weight: bold;
        border-radius: 5px;
    }

        .btn-update:hover {
            background-color: #e0a800;
        }

    .btn-delete {
        background-color: #dc3545;
        border: none;
        padding: 5px 10px;
        color: white;
        font-weight: bold;
        border-radius: 5px;
    }

        .btn-delete:hover {
            background-color: #c82333;
        }
</style>

<h2 class="page-header">All Students List</h2>

<div class="container">
    <div class="top-bar">
        <a href="@Url.Action("Create", "SchoolManagementSystem")" class="add-btn">➕ Add Student</a>
        <input type="search" id="studentSearch" class="search-bar" placeholder="🔍 Search...">
    </div>

    @if (!string.IsNullOrEmpty("msg"))
    {
        <div class="alert" role="alert" style="font-family: 'Poppins', sans-serif;color: black; font-size: medium; margin-left: 15px">
            @msg
        </div>
    }
    <div class="table-container">
        <table class="table table-hover table-bordered custom-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Student Name</th>
                    <th>Age</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Class</th>
                    <th>Section</th>
                    <th>Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="studentTableBody">
                @foreach (AllStudenResponsetView student in Model)
                {
                    <tr>
                        <td>@student.studentid</td>
                        <td>@student.student_name</td>
                        <td>@student.age</td>
                        <td>@student.address</td>
                        <td>@student.phonenumber</td>
                        <td>@student.email</td>
                        <td>@student.classid</td>
                        <td>@student.section</td>
                        <td>@student.title</td>
                        <td>
                            <a href="@Url.Action("Edit", "SchoolManagementSystem", new { id = student.studentid })"
                               class="btn btn-update">✏️ Update</a>
                            <a href="@Url.Action("Delete", "SchoolManagementSystem", new { id = student.studentid })"
                               class="btn btn-delete" onclick="return confirm('Are you sure to delete this record?')">🗑️ Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    document.getElementById("studentSearch").addEventListener("keyup", function () {
        let query = this.value.toLowerCase();
        let rows = document.querySelectorAll("#studentTableBody tr"); 

        rows.forEach(row => {
            let text = row.textContent.toLowerCase();
            row.style.display = text.includes(query) ? "" : "none"; 
        });
    });
</script>
