@model List<CourseView>
@{
    ViewData["Title"] = "Courses";
    Layout = "_Layout";
}

<style>
    .text-center {
        font-size: 1.5rem;
        font-weight: 700;
        text-align: center;
        color: #333;
        text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        transition: all 0.3s ease-in-out;
    }

    .text-center {
        color: #0056b3; 
        text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.3);
        transform: translateY(-5px); 
    }

    #text-font{
        font-size: 4.5rem;
        font-weight: 700;
        text-align: center;
        color: #333;
        text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        transition: all 0.3s ease-in-out; accent-color;
    }

    #text-font:hover {
        color: #0056b3; 
        text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.3);
        transform: translateY(-5px);
    }
</style>

<h2 id="text-font" class="text-center mt-3">📚 Courses</h2>

<div class="container mt-4" style="margin-left: 15%;">
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm" style="width: 220px; height: 100px;">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <h6 class="card-title text-center m-0">@course.Name</h6>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
