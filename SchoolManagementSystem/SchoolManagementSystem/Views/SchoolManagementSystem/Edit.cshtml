@model SchoolManagementSystem.Models.UpdateStudentViewModel

@{
   
}
<style>
    .mylabel {
        display: inline-block;
        color: black;
        font-size: larger;
    }
</style>

<div class="d-flex justify-content-center align-items-center flex-column" style="height: 100vh;">
    <div class="card shadow-lg p-4" style="width: 30rem;">
        <div class="card-body">
           
            <h3 class="card-title text-center mb-4">Student Update Form</h3>
            <form asp-controller="SchoolManagementSystem" asp-action="Edit" method="post">
                <input asp-for="Studentid" type="hidden" />

                <div class="mb-3">
                    <label asp-for="updateName" class="form-label">Student Name</label>
                    <input asp-for="updateName" class="form-control" placeholder="Enter update name">
                    <span class="text-danger" asp-validation-for="updateName"></span>
                </div>

                <div class="mb-3">
                    <label for="classDropdown" class="form-label">Select Class</label>
                    <select id="classDropdown" name="classId" class="form-control">
                        <option value="">-- Select Class --</option>
                        @if (ViewBag.classList != null)
                        {
                            foreach (var classItem in ViewBag.classList as List<StudentClassListView>)
                            {
                                <option value="@classItem.id" selected="@(Model != null && Model.classId == classItem.id ? "selected" : null)">
                                    @classItem.title
                                </option>
                            }
                        }
                    </select>
                </div>
                

                <div class="mb-3">
                    <label asp-for="age" class="form-label">Age</label>
                    <input asp-for="age" class="form-control">
                    <span class="text-danger" asp-validation-for="age"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="address" class="form-label">Address</label>
                    <textarea asp-for="address" class="form-control" rows="3"></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="phoneNumber" class="form-label">Phone Number</label>
                    <input asp-for="phoneNumber" class="form-control">
                    <span class="text-danger" asp-validation-for="phoneNumber"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="updateEmail" class="form-label">Email</label>
                    <input asp-for="updateEmail" class="form-control">
                    <span class="text-danger" asp-validation-for="updateEmail"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="password" class="form-label">Password</label>
                    <input asp-for="password" type="password" class="form-control">
                    <span class="text-danger" asp-validation-for="password"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary mt-3">Save</button>
                </div>
            </form>
        </div>
    </div>

